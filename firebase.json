{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=3000, s-maxage=604800"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/staff-guideline",
        "destination": "https://docs.google.com/document/d/1kkMbFJLEjAuVjJQD8JhGASYvB_4HEzFdlST71xIGgXo/edit?usp=sharing",
        "type": 302
      },
      {
        "source": "/privacy-policy",
        "destination": "https://docs.google.com/document/d/1c2F5_YEUtBN9ORTIAqMeGY__x1KbEHO10Tle4PXnILM/edit?usp=sharing",
        "type": 302
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}